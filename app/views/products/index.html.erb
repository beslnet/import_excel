<div class="row">
<div class="col-xs-12 col-sm-6 col-md-8">
<h1>Listado de productos</h1>
</div>
<div class="col-xs-12 col-sm-6 col-md-8">
<p id="notice"><%= notice %></p>
<div class="tabla-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<p><%= link_to 'New Product manual', new_product_path, :class => "btn btn-info" %>
<%= link_to "Import products from excel", new_product_import_path, :class => "btn btn-info" %></p>
